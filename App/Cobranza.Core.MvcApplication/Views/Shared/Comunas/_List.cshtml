@model IEnumerable<Cobranza.Core.Application.Dto.PanelParametros.ComunaDto>

<div class="panel panel-default">
    <div class="panel-heading">Listado de rubros</div>
        <div class="panel-body ">
            <div class="table-inverse table-responsive">
                <table class="table table-bordered table-hover " id="TableComunas">
                    <thead>
                        <tr>
                            <th>Pa&iacute;s</th>
                            <th>Regi&oacute;n</th>
                            <th>Identificador</th>
                            <th>Nombre</th>
                            <th>Es por defecto</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center">No hay Comunas definidas.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NombrePais</td>
                                    <td class="wrapTextTd">@item.NombreRegion</td>
                                    <td>@item.IdComuna</td>
                                    <td class="wrapTextTd">@item.Nombre</td>
                                    <td>@(item.EsDefault ? "SI" : "NO")</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", "Comunas", new { idComuna = item.IdComuna })" class="btn btn-default btn-sm">
                                            <span class="glyphicon glyphicon-wrench"></span>
                                            Editar
                                        </a>
                                        <a id="deleteItem" class="deleteItem btn btn-danger btn-sm" data-target="#basic" data-toggle="modal"
                                           data-pais="@item.CodigoPais"
                                           data-region="@item.IdRegion"
                                           data-id="@item.IdComuna"
                                           data-nombre="@item.Nombre"
                                           data-default="@(item.EsDefault ? true : false)">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>

<script type="text/javascript">
    var urlComunaDelete = "@Url.Action("Delete", "Comunas")";
</script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/Comuna/_List.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/Comuna/_Delete.js")" type="text/javascript"></script>
