@using Cobranza.Core.Application.Dto.PanelParametros
@model TipoIdentificadorPersonaDto

@{
    IEnumerable<PaisDto> paises = ViewBag.Paises;

    PaisDto paisDefault = paises.SingleOrDefault(p => p.EsDefault);
}

<div class="form-group">
    <div class="col-sm-12">
        <label>Pa&iacute;s</label>
        @Html.DropDownListFor(m => m.CodigoPais,
                                        new SelectList(
                                        paises,
                                        "CodigoPais",
                                        "Nombre", paisDefault != null ? paisDefault.CodigoPais : null),
                                 "-- Seleccione --",
                                 new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CodigoPais, null, new { @class = "label label-danger textwhite col-sm-12" })
    </div>
</div>
<div class="form-group">
    <div class="col-sm-12">
        @Html.LabelFor(m => m.IdTipoIdentificadorPersona)
        @Html.TextBoxFor(m => m.IdTipoIdentificadorPersona, new { @class = "form-control", maxlength = "8" })
        @Html.ValidationMessageFor(m => m.IdTipoIdentificadorPersona, null, new { @class = "label label-danger textwhite col-sm-12" })
    </div>
</div>
<div class="form-group">
    <div class="col-sm-12">
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", maxlength = "100" })
        @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "label label-danger textwhite col-sm-12" })
    </div>
</div>
<div class="form-group">
    <div class="col-sm-12">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", maxlength = "100" })
        @Html.ValidationMessageFor(m => m.Descripcion, null, new { @class = "label label-danger textwhite col-sm-12" })
    </div>
</div>
<div class="form-group col-sm-12"></div>
<div class="form-group">
    <div class="col-sm-6">
        <a id="GuardarTipoIdentificadorPersona" class="btn btn-success col-lg-5 col-xs-5 btn-man" href="" data-toggle="modal">
            <span class="glyphicon glyphicon-ok"></span>
            Guardar
        </a>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-danger col-lg-5 col-xs-5 btn-man" href="@Url.Action("Index", "TipoIdentificadorPersonas")">
            <span class="glyphicon glyphicon-remove"></span>
            Cancelar
        </a>
    </div>
</div>

<script type="text/javascript">
    var urlTipoIdentificadorPersonaCreate = "@Url.Action("Create", "TipoIdentificadorPersonas")";
</script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/TipoIdentificadorPersona/_Create.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/TipoIdentificadorPersona/_ClearValidate.js")" type="text/javascript"></script>