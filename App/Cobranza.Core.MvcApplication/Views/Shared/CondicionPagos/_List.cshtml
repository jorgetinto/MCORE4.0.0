@model IEnumerable<Cobranza.Core.Application.Dto.PanelParametros.CondicionPagoDto>

<div class="panel panel-default">
    <div class="panel-heading">Listado condiciones de pagos</div>
        <div class="panel-body ">
            <div class="table-inverse table-responsive">
                <table class="table table-bordered table-hover " id="TableCondicionPagos">
                    <thead>
                        <tr>
                            <th>Identificador</th>
                            <th>Nombre</th>
                            <th>Días</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center">No hay condiciones de pagos definidos.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="wrapTextTd">@item.IdCondicionPago</td>
                                    <td class="wrapTextTd">@item.Nombre</td>
                                    <td class="wrapTextTd">@item.Dias</td>
                                    <td class=" wrapTextTd text-center">
                                        <a href="@Url.Action("Edit", "CondicionPagos", new { IdCondicionPago = item.IdCondicionPago })" class="btn btn-default btn-sm">
                                            <span class="glyphicon glyphicon-wrench"></span>
                                            Editar
                                        </a>
                                        <a id="deleteItem" class="deleteItem btn btn-danger btn-sm" data-target="#basic" data-toggle="modal" data-id="@item.IdCondicionPago" data-nombre="@item.Nombre" data-dias="@item.Dias">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>

<script type="text/javascript">
    var urlCondicionPagoDelete = "@Url.Action("Delete", "CondicionPagos")";
</script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/CondicionPago/_List.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/CondicionPago/_Delete.js")" type="text/javascript"></script>
