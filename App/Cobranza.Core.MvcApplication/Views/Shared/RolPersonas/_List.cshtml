@model IEnumerable<Cobranza.Core.Application.Dto.PanelParametros.RolPersonaDto>

<div class="panel panel-default">
    <div class="panel-heading">Listado de roles de personas</div>
        <div class="panel-body ">
            <div class="table-inverse table-responsive">
                <table class="table table-bordered table-hover " id="TableRolPersona">
                    <thead>
                        <tr>
                            <th class="col-lg-2">Identificador</th>
                            <th class="col-lg-7">Nombre</th>
                            <th class="col-lg-3">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center">No hay rubros definidos.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="wrapTextTd">@item.IdRolPersona</td>
                                    <td class="wrapTextTd">@item.Nombre</td>
                                    <td class=" wrapTextTd text-center">
                                        <a href="@Url.Action("Edit", "RolPersonas", new { idRolPersona = item.IdRolPersona })" class="btn btn-default btn-sm">
                                            <span class="glyphicon glyphicon-wrench"></span>
                                            Editar
                                        </a>
                                        <a id="deleteItem" class="deleteItem btn btn-danger btn-sm" data-target="#basic" data-toggle="modal" data-id="@item.IdRolPersona" data-nombre="@item.Nombre">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>

<script type="text/javascript">
    var urlDataTableSpanish = "@Url.Content("~/Content/dataTable.Spanish.js")";
</script>

<script type="text/javascript">
    var urlRolDelete = "@Url.Action("Delete", "RolPersonas")";
</script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/RolPersona/_List.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/RolPersona/_Delete.js")" type="text/javascript"></script>
