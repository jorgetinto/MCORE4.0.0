@model IEnumerable<Cobranza.Core.Application.Dto.PanelParametros.PaisDto>

<div class="panel panel-default">
    <div class="panel-heading">Listado paises</div>
        <div class="panel-body ">
            <div class="table-inverse table-responsive">
                <table class="table table-bordered table-hover " id="TablePais">
                    <thead>
                        <tr>
                            <th>C&oacute;digo Pa&iacute;s</th>
                            <th>Nombre</th>
                            <th>Nacionalidad</th>
                            <th>Es por defecto</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center">No hay paises definidos.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CodigoPais</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.Nacionalidad</td>
                                    <td>@(item.EsDefault ? "SI" : "NO")</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", "Paises", new { codigoPais = item.CodigoPais })" class="btn btn-default btn-sm">
                                            <span class="glyphicon glyphicon-wrench"></span>
                                            Editar
                                        </a>
                                        <a id="deleteItem" class="deleteItem btn btn-danger btn-sm" data-target="#basic" data-toggle="modal"
                                           data-id="@item.CodigoPais"
                                           data-nombre="@item.Nombre"
                                           data-nacionalidad="@item.Nacionalidad"
                                           data-default="@(item.EsDefault ? true : false)">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>

<script type="text/javascript">
    var urlPaisDelete = "@Url.Action("Delete", "Paises")";
</script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/Pais/_List.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/Pais/_Delete.js")" type="text/javascript"></script>
