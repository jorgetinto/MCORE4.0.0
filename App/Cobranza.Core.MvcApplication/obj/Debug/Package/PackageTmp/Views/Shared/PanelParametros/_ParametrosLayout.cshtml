<div class="modal fade" id="ModalOK" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center" id="Titulo"></h4>
            </div>
            <div class="modal-body text-center col-sm-12">
                <span class="glyphicon glyphicon-ok gi-3x" aria-hidden="true"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success btn-block" data-dismiss="modal" id="modalOk">OK</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ModalError" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center" id="TituloError"></h4>
            </div>
