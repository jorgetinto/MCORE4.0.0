@model Cobranza.Core.Application.Dto.PanelParametros.PaisDto

<div class="form-group">
    <div class="col-sm-12">
        @Html.LabelFor(m => m.CodigoPais)
        @Html.TextBoxFor(m => m.CodigoPais, new { @class = "form-control input-sm", maxlength = "10" })
        @Html.ValidationMessageFor(m => m.CodigoPais, null, new { @class = "label label-danger textwhite col-sm-12" })
    </div>
    <div class="col-sm-12"></div>
</div>
<div class="form-group">
    <div class="col-sm-12">
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control input-sm", maxlength = "100" })
        @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "label label-danger textwhite col-sm-12" })
    </div>
</div>
<div class="form-group">
    <div class="col-sm-12">
        @Html.LabelFor(m => m.Nacionalidad)
        @Html.TextBoxFor(m => m.Nacionalidad, new { @class = "form-control input-sm", maxlength = "100" })
        @Html.ValidationMessageFor(m => m.Nacionalidad, null, new { @class = "label label-danger textwhite col-sm-12" })
    </div>
</div>
<div class="form-group">
    <div class="col-sm-5">
        @Html.LabelFor(m => m.EsDefault)
    </div>
    <div class="col-sm-4">
        @Html.CheckBoxFor(m => m.EsDefault, new { @class = "checkbox" })
    </div>
</div>

<div class="form-group col-sm-12"></div>
<div class="form-group">
    <div class="col-sm-6">
        <a id="GuardarPais" class="btn btn-success col-lg-5 col-xs-5 btn-man" href="" data-toggle="modal">
            <span class="glyphicon glyphicon-ok"></span>
            Guardar
        </a>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-danger col-lg-5 col-xs-5 btn-man" href="@Url.Action("Index", "Paises")">
            <span class="glyphicon glyphicon-remove"></span>
            Cancelar
        </a>
    </div>
</div>

<script type="text/javascript">
    var urlPaisEdit = "@Url.Action("Edit", "Paises")";
</script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/Pais/_Edit.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/Pais/_ClearValidate.js")" type="text/javascript"></script>