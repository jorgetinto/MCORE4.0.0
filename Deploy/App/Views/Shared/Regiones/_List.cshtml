@model IEnumerable<Llacruz.Cobranza.Core.Application.Dto.PanelParametros.RegionDto>

<div class="panel panel-default">
    <div class="panel-heading">Listado de regiones</div>
        <div class="panel-body ">
            <div class="table-inverse table-responsive">
                <table class="table table-bordered table-hover " id="TableRegion">
                    <thead>
                        <tr>
                            <th>Pa&iacute;s</th>
                            <th>Identificador de Regi&oacute;n</th>
                            <th>Nombre</th>
                            <th>Es por defecto</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center">No hay regiones definidas.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NombrePais</td>
                                    <td>@item.IdRegion</td>
                                    <td>@item.Nombre</td>
                                    <td>@(item.EsDefault ? "SI" : "NO")</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", "Regiones", new { IdRegion = item.IdRegion })" class="btn btn-default btn-sm">
                                            <span class="glyphicon glyphicon-wrench"></span>
                                            Editar
                                        </a>
                                        <a id="deleteItem" class="deleteItem btn btn-danger btn-sm" data-target="#basic" data-toggle="modal"
                                           data-codigopais="@item.CodigoPais"
                                           data-id="@item.IdRegion"
                                           data-nombre="@item.Nombre"
                                           data-default="@(item.EsDefault ? true : false)">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>

<script type="text/javascript">
    var urlDataTableSpanish = "@Url.Content("~/Content/dataTable.Spanish.js")";
</script>
<script type="text/javascript">
    var urlRegionDelete = "@Url.Action("Delete", "Regiones")";
</script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/Region/_List.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/Region/_Delete.js")" type="text/javascript"></script>
