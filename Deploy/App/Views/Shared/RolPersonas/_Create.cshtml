@model Llacruz.Cobranza.Core.Application.Dto.PanelParametros.RolPersonaDto

<div class="form-group">
    <div class="col-sm-12">
        @Html.LabelFor(m => m.IdRolPersona)
        @Html.TextBoxFor(m => m.IdRolPersona, new { @class = "form-control", maxlength = "4" })
        @Html.ValidationMessageFor(m => m.IdRolPersona, null, new { @class = "label label-danger textwhite col-sm-12" })
    </div>
    <div class="col-sm-12"></div>
</div>
<div class="form-group">
    <div class="col-sm-12">
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", maxlength = "100" })
        @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "label label-danger textwhite col-sm-12" })
    </div>
</div>
<div class="form-group col-sm-12"></div>
<div class="form-group">
    <div class="col-sm-6">
        <a id="GuardarNuevoRolPersona" class="btn btn-success col-lg-5 col-xs-5 btn-man" href="" data-toggle="modal">
            <span class="glyphicon glyphicon-ok"></span>
            Guardar
        </a>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-danger col-lg-5 col-xs-5 btn-man" href="@Url.Action("Index", "RolPersonas")">
            <span class="glyphicon glyphicon-remove"></span>
            Cancelar
        </a>
    </div>
</div>

<script type="text/javascript">
    var urlRolPersonaCreate = "@Url.Action("Create", "RolPersonas")";
</script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/RolPersona/_Create.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/Shared/PanelParametros/RolPersona/_ClearValidate.js")" type="text/javascript"></script>